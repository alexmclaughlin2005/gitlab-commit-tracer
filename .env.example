# GitLab Configuration
GITLAB_URL=https://gitlab.com
GITLAB_TOKEN=your_gitlab_token_here
GITLAB_PROJECT_ID=your_project_id_here

# AI Configuration (OpenAI)
OPENAI_API_KEY=your_openai_api_key_here
AI_MODEL=gpt-4o

# Application Configuration
NODE_ENV=development
LOG_LEVEL=info
PORT=3005

# CORS Configuration (if frontend is on different domain)
# Comma-separated list of allowed origins
# Example: ALLOWED_ORIGINS=https://your-app.vercel.app,https://www.your-app.com
ALLOWED_ORIGINS=*

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://user:password@host:port/database

# Optional: Connection pool settings (defaults shown)
# DATABASE_POOL_MIN=2
# DATABASE_POOL_MAX=10

# Slack Notifications Configuration
# Get webhook URL from: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_ENABLED=true

# Optional: Slack notification settings
# SLACK_CHANNEL=#gitlab-commits
# SLACK_USERNAME=GitLab Commit Tracer
# SLACK_ICON_EMOJI=:gitlab:

# Control which events trigger notifications (defaults shown)
# SLACK_NOTIFY_ON_DETECT=false
# SLACK_NOTIFY_ON_TRACE=false
# SLACK_NOTIFY_ON_COMPLETE=true
# SLACK_NOTIFY_ON_ERROR=true

# Control what content is included in notifications (defaults shown)
# SLACK_INCLUDE_BUSINESS_UPDATE=true
# SLACK_INCLUDE_TECHNICAL_UPDATE=false
# SLACK_INCLUDE_FULL_ANALYSIS=false

# Clerk Authentication Configuration
# Get your keys from: https://dashboard.clerk.com
# Phase 1 (Infrastructure Only - Default): CLERK_ENABLED=true, others=false
# Phase 2 (UI Protection): CLERK_ENFORCE_UI_AUTH=true
# Phase 3 (Full Protection): CLERK_ENFORCE_API_AUTH=true

CLERK_ENABLED=false
CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_secret_key_here

# Authentication Enforcement (Feature Flags)
CLERK_ENFORCE_UI_AUTH=false
CLERK_ENFORCE_API_AUTH=false

# Clerk URLs (customize if needed)
CLERK_SIGN_IN_URL=/sign-in
CLERK_SIGN_UP_URL=/sign-up
CLERK_AFTER_SIGN_IN_URL=/
CLERK_AFTER_SIGN_UP_URL=/

# Optional: Comma-separated list of routes that don't require auth (even when enforced)
CLERK_PUBLIC_ROUTES=/api/status,/health
